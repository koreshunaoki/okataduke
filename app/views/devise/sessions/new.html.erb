<div class="container takasa">
  <%= flash[:error] %>
  <h2>ログイン</h2>
　<h4>会員の方はこちらからログイン</h4>
  <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field">
      <%= f.label :email, "メールアドレス" %>　　　　　<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div><br>
    <div class="field">
      <%= f.label :password_confirmation, "パスワード" %>　　　　　　　<%= f.password_field :password %>
    </div><br>
    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-success btn-lg center-block" %>
    </div>
  <% end %>

  <h4 style="width: 300px;background-color: #f0f6da; text-align: center;">会員登録がお済み出ない方</h4>
  <%= link_to "こちら",  new_customer_registration_path %>         <span>から新規登録を行ってください</span>

</div>