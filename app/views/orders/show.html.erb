<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-5">
      <h2>購入履歴詳細</h2>
      <%= attachment_image_tag @item, :image, :fill, 400, 400 %>
    </div>
    <div class="col-md-7">
      <h1>購入情報</h1>
      <table border="3" bordercolor="white" style="font-size: 30px;", align="center">
        <tr>
          <th>商品名</th>
          <th><%= @order.item.name %></th>
        </tr>
         <tr>
          <th>商品金額</th>
          <th><%= number_to_currency(@orderitem.price) %></th>
        </tr>
        <tr>
          <th>出品者名</th>
          <th><%= @order.item.customer.last_name %><%= @order.item.customer.first_name %></th>
        </tr>
        <tr>
          <th>配送先</th>
          <th><%= @order.customer.postal_code %><br><%= @order.customer.address %><br><%= @order.name %></th>
        </tr>
        <tr>
          <th>支払方法</th>
          <th><%= @order.payment_method_i18n %></th>
        </tr>
        <tr>
          <th>購入日</th>
          <th><%= @order.created_at.strftime("%Y年%m月%d日%H時%M分") %></th>
        </tr>
      </table>
    </div>
  </div>
</div>
