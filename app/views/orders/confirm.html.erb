<div class="container p-5 px-sm-0">
  <div class="row">
    <div class="col-md-5">
      <%= attachment_image_tag @item, :image, :fill, 400, 400, class:"form-group" %>
    </div>
    <div class="col-md-7">
      <h2>注文情報確認</h2>
      <table class="item-buy-table col4t th-nowrap" style="font-size: 20px; width: 100%">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>購入代金</th>
          <td><%= number_to_currency(@item.price) %></td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>お届け先</th>
          <td>
            〒<%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
      </table>
      <%= form_with model: @order, url: orders_path, local:true do |f| %>
        <%= f.hidden_field :postal_code %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :payment_method %>
        <%= f.hidden_field :sell_id, :value => @item.id %>
        <%= f.submit "購入する", class: "btn btn-success btn-lg center-block" %>
      <% end %>
    </div>
  </div>
</div>