<div class="container px-sm-0 py-5">
  <% if @order.errors.any? %>
    <ul style="color: red">
      <%= @order.errors.count %>件のエラーが発生しました
      <% @order.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    </ul>
  <% end %>
  <h2>注文情報入力</h2>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-lg-2">
      <h4><strong>支払方法</strong></h4>
      <%= form_with model: @order, url: orders_confirm_path(sell_id: @item_id), local:true do |f| %>
      <div>
        <%= f.radio_button :payment_method, "credit_card" %>
        <%= f.label :payment_method, "クレジットカード" %>
      </div><br>
      <div>
        <%= f.radio_button :payment_method, "transfer" %>
        <%= f.label :payment_method, "銀行振込" %>
      </div>
    </div>
    <div class="col-1">
    </div>
    <div class="col-lg-5">
      <h4><strong>お届け先</strong></h4>
      <div>
        <%= f.radio_button :address_option, "current_customer_address" %>
        <%= f.label :address, "ご自身の住所" %><br>
        〒<%= current_customer.postal_code %><br>
        <%= current_customer.address %><br>
        <%= current_customer.last_name %>　<%= current_customer.first_name %>
      </div>
      <div>
        <%= f.radio_button :address_option, "registered_address" %>
        <%= f.label :address, "登録済みの住所から選択" %>
        <%= f.collection_select(:address_id, @addresses, :id, :address_detail, prompt: "選択してください") %>
      </div>
      <div>
        <%= f.radio_button :address_option, "new_address" %>
        <%= f.label :address, "新しいお届け先" %>
      </div>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th><%= f.text_field :new_postal_code, autofocus: true, autocomplete: "postal_code" %></th>
          </tr>
          <tr>
            <th>住所</th>
            <th><%= f.text_field :new_address, autofocus: true, autocomplete: "address", include_blank: '都道府県' %></th>
          </tr>
          <tr>
            <th>宛名</th>
            <th><%= f.text_field :new_name, autofocus: true, autocomplete: "name" %></th>
          </tr>
        </thead>
      </table>
      <%= f.submit "確認画面へ進む", class: "btn btn-success btn-lg center-block" %>
      <% end %>
    </div>
  </div>
</div>