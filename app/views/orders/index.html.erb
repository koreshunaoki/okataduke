 <h2>注文履歴一覧</h2>

<div class="col-5 ml-3">
  <h1 class="my-3 ml-3"></h1>
  <table border="3" bordercolor="black" class="table table-sm" >
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>注文詳細</th>
    </tr>
    <tr><% @orders.each do |order| %></tr>
      <th><%= order.created_at %></th>
      <th><%= order.postal_code %><br><%= order.address %><br><%= order.name %></th>
      <th>
        <% order.order_details.each do |order_detail| %>
        <%= order_detail.item.name %>
        <% end %>
      </th>
      <th><%= order.total_payment %></th>
      <th><%= link_to "表示する", public_order_path(order), class:"btn btn-success  center-block" %></th>
    <tr><% end %></tr>
  </table>