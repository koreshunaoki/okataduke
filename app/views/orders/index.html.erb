<div class="container">
  <div class="row">
    <div class="col">
      <table class="table table-hover" border="3" bordercolor="black" style="font-size: 20px;", align="center">
        <h2>購入商品履歴一覧</h2>
        <thead>
          <tr>
            <th scope="col">注文日</th>
            <th scope="col">配送先</th>
            <th scope="col">注文商品</th>
            <th scope="col">支払金額</th>
            <th scope="col">注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <tr><% @orders.each do |order| %></tr>
              <%# binding.pry %>
            <% if order.item.nil? %>
            <% else %>
              <td><%= order.created_at.strftime("%Y年%m月%d日%H時%M分") %></td>
              <td>〒<%= order.postal_code %><br><%= order.address %><br><%= order.name %></td>
              <td><%= order.item.name %></td>
              <td><%= number_to_currency(order.item.price) %></td>
              <td><%= link_to "表示する", order_path(order), class:"btn btn-success center-block" %></td>
            <% end %>
          <tr><% end %></tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
