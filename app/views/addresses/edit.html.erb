<div class="container p-5 py-5">
  <h2>配送先編集</h2>
  <% if @address.errors.any? %>
  <ul style="color: red">
    <%= @address.errors.count %>件のエラーが発生しました
    <% @address.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  </ul>
  <% end %>
  <%= form_with model: @address, url: address_path(@address), local:true do |f| %>
    <div class="row">
       <table class="customer-table" style="font-size: 20px;">
        <thead>
          <tr>
            <th>郵号</th>
            <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class:"form-group" %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_field :address, size: "50", autofocus: true, autocomplete: "address", include_blank: '都道府県', class:"form-group" %></td>
          </tr>
           <tr>
            <th>宛名</th>
            <td><%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-group" %></td>
          </tr>

        </thead>
      </table>
    </div>
    <div align="center">
      <%= f.submit "編集する", class: "btn btn-success btn-lg center-block" %>
    </div>
  <% end %>
</div>