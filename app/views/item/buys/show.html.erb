<h2>購入商品詳細画面</h2>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-5">
      <%= attachment_image_tag @item, :image, :fill, 400, 400 %>
    </div>
    <div class="col-md-7">
      <h2><%= @item.name %></h2><br>
      <h2><%= @item.introduction %></h2><br>
      <h2>いいね</h2>
      <h2><%= @item.category %></h2><br>
      <h2><%= @item.price %></h2>
      <span><i class="fa fa-calendar"></i> <%= @item.created_at.strftime('%Y/%m/%d') %></span>
      <h2>コメント</h2>
    </div>
  </div>
    
    <%= link_to '情報入力に進む', new_order_path(sell_id: @item.id), class:"btn btn-success btn-lg center-block" %>

</div>