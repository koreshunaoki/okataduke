<div class="container px-5 px-sm-0 card-list-container py-5">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>検索結果</h2>
      <%= form_with url: item_buys_sort_path, method: :get, local:true do |f| %>
      <%= f.hidden_field :word, value: params[:word] %>
      <%= f.hidden_field :search, value: params[:search] %>
        <%= f.select :keyword, [['投稿が新しい順', 'new'], ['投稿が古い順', 'old'], ['いいねが多い順', 'likes'], ['いいねが少ない順', 'dislikes'], ['価格が高い順', 'high'], ['価格が低い順', 'low']] %>
        <%= f.submit "ソートを変える", class:"btn btn-success center-block" %>
      <% end %>
      <div class="flex-container">
        <% @items.each do |item| %>
          <div class="card col-lg-4 col-md-2 mb-4">
            <div style="text-align: center">
              <%= link_to item_buy_path(item), class:"text-dark" do %>
                <%= attachment_image_tag item, :image, :fill, 200, 200 %>
              <% end %><br>
              <strong><span><%= item.name %></span></strong><br>
              <span><%= number_to_currency(item.price) %></span><br>
              <% if item.order_status == 'sale' %>
                <%= item.order_status_i18n %>
              <% else item.order_status == 'purchased' %>
                <%= item.order_status_i18n %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>