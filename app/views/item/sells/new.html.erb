<div class="container takasa">
  <h2>出品商品登録画面</h2>

  <%= form_with model: @sell,  do |f| %>
    <div class="field">
      <%= f.label :image_id, "画像" %>　　　　　　　　　　<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div><br>

    <div class="field">
      <%= f.label :name, "名前　　　　　　　　　　　（姓）　" %><%= f.text_field :name, autofocus: true, autocomplete: "name" %>
    </div><br>

    <div class="field">
      <%= f.label :introduction, "説明文" %>　　　　　<%= f.text_field :introduction, autofocus: true, autocomplete: "introduction" %>
    </div><br>

    <div class="field">
      <%= f.label :price,"価格" %>　　　　　<%= f.text_field :price, autofocus: true, autocomplete: "price" %>
    </div><br>

    <div class="actions">
      <%= f.submit "出品する", class: "btn btn-success btn-lg center-block" %>
    </div>
  <% end %>


</div>