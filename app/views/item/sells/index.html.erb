
<div class="container px-5 px-sm-0 card-list-container py-5">
  <div class="row">
    <div class="col-md-12 offset-md-1">
      <h2>出品商品一覧画面</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>商品名</th>
            <th>ステータス</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr><% @items.each do |item| %></tr>
            <th><%= attachment_image_tag item, :image, size: "70x70" %></th>
            <th><%= item.name %></th>
            <th>
              <% if item.order_status == 'sale' %>
                <%= item.order_status_i18n %>
              <% else item.order_status == 'purchased' %>
                <%= item.order_status_i18n %>
              <% end %>
            </th>
            <th><%= link_to '詳細を見る', item_buy_path(item), class: "btn btn-success" %></th>
          <tr><% end %></tr>
        </tbody>
      </table>
    </div>
    <%#= paginate sells %>
  </div>
</div>
