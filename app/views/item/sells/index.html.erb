  <div class="row">
    <div class="col-md-2">
      <h2>カテゴリー</h2>
      <%= form_with model: @item, local: :true do |f| %>
        <%= f.select :category_id, Category.all.map{ |cate| [cate.name,cate.id]} %>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <div class="flex-container">
        <% @items.each do |item| %>
          <div class="card flex-item">
            <div>
              <%= attachment_image_tag item, :image, :fill, 200, 200 %>
              <strong><i class="far fa-flag"></i><span><%= item.name %></span></strong>
              <span><i class="fas fa-yen-sign"></i></i> <%= item.price%>円 ｜ </span>
              <i class="far fa-thumbs-up"></i>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <%#= paginate sells %>
  </div>
</div>
