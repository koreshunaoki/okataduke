
<div class="container px-5 px-sm-0 card-list-container py-5">
  <%# if @sell.errors.any? %>
  <!--  <div>-->
      <ul style="color: red">
        <%#= @sell.errors.count %>errors prohibited this obj from being saved<br>
          <%# @sell.errors.full_messages.each do |message| %><br>
          <%#= message %>
        <%# end %>
      </ul>
  <!--  </div>-->
