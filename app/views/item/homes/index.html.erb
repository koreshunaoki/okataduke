<div class="container px-5 px-sm-0 card-list-container py-5">
  <%= link_to '家庭用品を登録する', new_item_home_path, class:"btn btn-success btn-lg center-block" %>
  <% @homes.each do |home| %>
    <div class="py-5 bg-light">
      <div class="card w-75 mx-auto mt-4 shadow-lg">
        <%= attachment_image_tag home, :image, class:"card-img-top"; %>
        <div class="card-body">
          <div class="row">
            <div class="col-2">
              <%#= attachment_image_tag @post_image.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
            </div>
            <div class="col-10">
              <p class="card-title">
                <%= link_to(item_home_path(home), class:"text-dark") do %>
                  <strong><i class="far fa-flag"></i><span> <%= home.name %></span></strong>
                <% end %>
              </p>
              <p class="card-title">説明：<%= home.introduction %></p>
              <span><i class="fas fa-user"></i> By <%= home.name %> ｜ </span>
              <span><i class="fa fa-calendar"></i> <%= home.created_at.strftime('%Y/%m/%d') %> ｜ </span>
              <span><i class="fa fa-comment"></i> <%#= link_to "#{@post_image.post_comments.count}", post_image_path(@post_image.id), class:"text-dark" %> ｜ </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>