
<div class="container p-5 px-sm-0">
  <div class="row" >
    <div class="col-lg-5">
    <h2>家詳細</h2>
      <%= attachment_image_tag @home, :image, :fill, 400, 400, class:"form-group" %>
      <%= link_to '編集する', edit_item_home_path(@home), class:"btn btn-success btn-lg center-block form-group" %>
      <%= link_to "削除する", item_home_path(@home), method: :delete, data:{confirm: "削除しますか？"}, class:"btn btn-lg btn-danger destroy_book_id form-group" %>
      <% if !@item.blank? && @item.order_status == 'sale' or !@item.blank? && @item.order_status == 'purchased' %>
          <p class="btn btn-success btn-lg center-block disabled"> フリマサイトに出品する</p>
      <% else %>
        <%= link_to "フリマサイトに出品する", new_item_sell_path(home_item_id: @home.id), class: "btn btn-success btn-lg center-block" %>
      <% end %>
    </div>
    <div class="col-lg-7">
      <table class="item-buy-table th-nowrap" style="font-size: 20px;">
        <thead>
          <tr>
            <th>家庭用品名</th>
            <td><%= @home.name %></td>
          </tr>
          <tr>
            <th>メモ</th>
            <td><%= @home.introduction %></td>
          </tr>
          <tr>
            <th>置き場所</th>
            <td><%= @home.place_to_put %></td>
          </tr>
          <tr>
            <th>商品カテゴリー</th>
            <td><%= @home.category.name %></td>
          </tr>
          <tr>
            <th>登録日時</th>
            <td><%= @home.created_at.strftime("%Y年%m月%d日%H時%M分") %></td>
          </tr>
          <tr>
            <th>出品情報</th>
            <td>
              <%if !@item.blank? %>
                <% if @item.order_status == 'sale' %>
                  <%= @item.order_status_i18n %>
                <% else @item.order_status == 'purchased' %>
                  <%= @item.order_status_i18n %>
                <% end %>
              <% else %>
                <h8>未出品</h8>
              <% end %>
            </td>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>