<div class="container takasa">
  <h2>会員情報編集</h2>

  <%= form_with model: @customer, url: customer_path(@customer), local:true do |f| %>

    <div>
      <%= f.label :last_name, "氏名　　　　　　　　　　姓）" %><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
      <%= f.label :first_name, "　　　　　　（名） " %><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div><br>
    <div>
      <%= f.label :last_name_kana, "フリガナ　　　　　　　セイ）" %><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
      <%= f.label :first_name_kana, "　　　　　（メイ）" %><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </div><br>

    <div>
      <%= f.label :postal_code, "郵便番号" %>　　　　　　　　　　<%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div><br>
    <div>
      <%= f.label :address, "住所" %>　　　　　　　　　　　　<%= f.text_field :address, autofocus: true, autocomplete: "address", include_blank: '都道府県' %>
    </div><br>
    <div>
      <%= f.label :telephone_number, "電話番号" %>　　　　　　　　　　<%= f.text_field :telephone_number, autofocus: true, autocomplete: "phone_number" %>
    </div><br>
    <div>
      <%= f.label :email, "メールアドレス" %>　　　　　　　<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div><br>
    <%= f.submit "編集内容を保存", class: "btn btn-success btn-lg center-block" %>　　　　　　　　　　　　　　　　　
  <% end %>　　
  <%= link_to '退会する', customers_unsubscribe_path, class:"btn btn-success btn-lg center-block" %>