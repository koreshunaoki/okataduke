<div class="container takasa">
  <% if @customer.errors.any? %>
  <ul style="color: red">
    <%= @customer.errors.count %>件のエラーが発生しました
    <% @customer.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  </ul>
  <% end %>
  <h2>会員情報編集</h2>

  <%= form_with model: @customer, url: customer_path(@customer), local:true do |f| %>
    <table class="customer-table" style="font-size: 20px;">
      <tr>
        <th><%= f.label "名前", class:"form-group" %></th>
        <td>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class:"form-group" %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",class:"form-group" %>
        </td>
      </tr>
      <tr>
        <th><%= f.label "フリガナ", class:"form-group" %></th>
        <td>
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana",class:"form-group"  %>
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class:"form-group" %>
        </td>
      </tr>
      <tr>
        <th><%= f.label "メールアドレス", class:"form-group" %></th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-group" %></td>
      </tr>
      <tr>
        <th><%= f.label "郵便番号（ハイフンなし）", class:"form-group" %></th>
        <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class:"form-group" %></td>
      </tr>
      <tr>
        <th><%= f.label "住所", class:"form-group" %></th>
        <td><%= f.text_field :address, autofocus: true, autocomplete: "address", :value_method => :name, include_blank: '都道府県',class:"form-group" %></td>
      </tr>
      <tr>
        <th><%= f.label "電話番号（ハイフンなし）", class:"form-group" %></th>
        <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "phone_number",class:"form-group" %></td>
      </tr>
      <tr>
        <th><%= f.label "パスワード（６文字以上）", class:"form-group" %></th>
        <td><%= f.password_field :password, autocomplete: "new-password", class:"form-group" %>
        </td>
      <tr>
        <th><%= f.label "パスワード（確認用）", class:"form-group" %></th>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-group" %>
      </tr>
    </table>
    <%= f.submit "編集内容を保存", class: "btn btn-success btn-lg center-block form-group " %>
    <%= link_to '退会する', customers_unsubscribe_path, class:"btn btn-outline-danger btn-lg center-block form-group" %>
  <% end %>