<div style="text-align: center">
  <h1>マイページ</h1>
  <h3>登録情報</h3>
  <%= link_to '登録情報を編集する', edit_customer_path(@customer), class:"btn btn-success btn-lg center-block" %>
  <h1 class="my-5 ml-3"></h1>
  <table align="center" style="font-size: 30px;">
    <tr>
      <td>氏名</td>
      <td><%= @customer.last_name %><%= @customer.first_name %></td>
    </tr>
    <tr>
      <td>カナ</td>
      <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </table>
  <table>
    <tr><%= link_to '配送先一覧を見る', addresses_path, class:"btn btn-success btn-lg center-block" %></tr><br>
    <tr></tr><br>
    <tr><%= link_to '注文履歴一覧を見る', orders_path, class:"btn btn-success btn-lg center-block" %></tr><br>
    <tr></tr><br>
    <tr><%= link_to '出品した商品を確認する', item_sells_path, class:"btn btn-success btn-lg center-block" %></tr>
  </table>
</div>